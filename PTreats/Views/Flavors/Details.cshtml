@{
  Layout = "_Layout";
}
@using PTreats.Models
@model PTreats.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<hr />
<h3>Available treats in @Model.Name</h3>
<div class="mb-3">
  <ul>
    @foreach (TreatFlavor tf in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{tf.Treat.Name}", "Details", "Treats", new { id = tf.Treat.TreatId })</li>
    }
  </ul>
</div>

<hr />
<p>@Html.ActionLink("Back", "Index")</p>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>