@{
  Layout = "_Layout";
}
@using PTreats.Models;
@using System.Security.Claims;

<h3>Types of Flavors</h3>
<hr />
@if (Model.Count != 0)
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<hr />
<p>@Html.ActionLink("Add a Flavor", "Create")</p>
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Log out", "Index", "Account")</p>
}
else
{
  <p>@Html.ActionLink("Log in", "Login", "Account")</p>
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>